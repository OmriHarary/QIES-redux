{
  "TransactionSummary": {
    "Directory": "/var/tmp",
    "Filter": "*.txt"
  },
  "ServicesFiles": {
    "CentralServicesFile": "/var/opt/centralservices.txt",
    "ValidServicesFile": "/var/opt/validservices.txt"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-ddTHH:mm:ss.fffZ",
        "UseUtcTimestamp": true
      }
    }
  }
}
